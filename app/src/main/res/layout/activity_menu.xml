<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/btnSearchInvoice2"
        android:layout_width="175dp"
        android:layout_height="76dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/violet_button"
        android:drawableTop="@drawable/ic_report"
        android:drawablePadding="2dp"
        android:padding="15dp"
        android:text="Reports"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateInvoice" />

    <View
        android:id="@+id/waveView2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/wavy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="64dp"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hmt_logo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="280dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waveView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/edendale_logo" />

    <Button
        android:id="@+id/btnStockRequest"
        android:layout_width="175dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/purple_button"
        android:drawableTop="@drawable/ic_stock_logo"
        android:drawablePadding="2dp"
        android:padding="15dp"
        android:text="Stock Request"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/btnCreateInvoice"
        android:layout_width="175dp"
        android:layout_height="76dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/pale_blue_button"
        android:drawableTop="@drawable/ic_invoice"
        android:drawablePadding="2dp"
        android:padding="15dp"
        android:text="Create Invoice"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/btnSearchInvoice"
        android:layout_width="175dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/grey_button"
        android:drawableTop="@drawable/ic_price"
        android:drawablePadding="2dp"
        android:padding="15dp"
        android:text="Search Invoice"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStockRequest" />

    <Button
        android:id="@+id/btnComplaints"
        android:layout_width="175dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/green_button"
        android:drawableTop="@drawable/ic_complaint"
        android:drawablePadding="2dp"
        android:padding="15dp"
        android:text="Complaints"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchInvoice" />

    <Button
        android:id="@+id/btnReceipt"
        android:layout_width="175dp"
        android:layout_height="76dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/blue_grey_button"
        android:drawableTop="@drawable/ic_receipt"
        android:drawablePadding="2dp"
        android:padding="15dp"
        android:text="Receipt"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toEndOf="@+id/btnComplaints"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchInvoice2" />

    <Button
        android:id="@+id/btnSync"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="#2C3479"
        android:text="Synchronize"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnComplaints" />

    <Button
        android:id="@+id/btnPush"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#4E125A"
        android:text="Push"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReceipt" />

    <ImageView
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/power_button"
        android:src="@drawable/ic_baseline_power_settings"/>
</androidx.constraintlayout.widget.ConstraintLayout>